{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 7,
    "ecmaFeatures": {
      "impliedStrict": true,
      "jsx": true,
      "experimentalObjectRestSpread": true
    },
    "sourceType": "module"
  },
  "env": {
    "node": true,
    "es6": true
  },
  "globals": {
    "__DEV__": true,
    "__PROD__": true,
    "__SERVER__": true,
    "__CLIENT__": true
  },
  "plugins": [
    "prettier",
    "react",
    "flowtype"
  ],
  "rules": {
    "prettier/prettier": ["error", {
      "singleQuote": true,
      "tabWidth": 4,
      "printWidth": 120,
      "trailingComma": "es5",
      "jsxBracketSameLine": false
    }]
  },
  "extends": [
    "prettier"
  ]
}
